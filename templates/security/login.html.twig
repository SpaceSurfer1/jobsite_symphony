{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
            <link href="{{ asset('login_page.css') }}" rel="stylesheet"/>
        {% endblock %}

{% block body %}
<div class="topbox">
            <div class="sitenamebox">
                <span><FcCloseUpMode/></span><h4>EssayOpinion</h4>
            </div>
            <div class="sitenamebox">
